<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="60dp"
    android:background="@color/black">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/singer_image_view"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlayCornerRadius16"
        tools:src="@drawable/ic_picture10" />

    <TextView
        android:id="@+id/name_text_view"
        style="@style/Title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/singer_image_view"
        app:layout_constraintTop_toBottomOf="@id/singer_image_view"
        tools:text="Die Antwoord" />

    <TextView
        android:id="@+id/country_text_view"
        style="@style/Text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/singer_image_view"
        app:layout_constraintTop_toBottomOf="@id/name_text_view"
        tools:text="Будапешт" />

    <ImageView
        android:id="@+id/airplane_image_view"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_airplane"
        app:layout_constraintStart_toStartOf="@id/country_text_view"
        app:layout_constraintTop_toBottomOf="@id/country_text_view" />

    <TextView
        android:id="@+id/price_text_view"
        style="@style/Text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/airplane_image_view"
        app:layout_constraintStart_toEndOf="@id/airplane_image_view"
        tools:text="от 22 264 $" />
</androidx.constraintlayout.widget.ConstraintLayout>